<h1>Categorías</h1>
 
<table class="table table-bordered" >
  <tr>
    	<th>Nombre</th>
    	<th>Id</th>
      <th colspan="2"></th>
  <% @categories.each do |category|%>
	</tr>
 
<tr>
      <td><%= category.name%></td>
      <td><%= category.id %></td>
     	<td><%= link_to 'Destroy', category_path(category), method: :delete, data: { confirm: 'Are you sure?' } %></td>
</tr>
<% end %>
</table>



